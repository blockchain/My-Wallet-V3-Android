<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/profile"
        android:key="profile">
        <Preference
            android:title="@string/options_id"
            android:key="guid" />
        <Preference
            android:title="@string/email"
            android:key="email" />
        <Preference
            android:title="@string/mobile"
            android:key="mobile" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preferences"
        android:key="preferences">
        <Preference
            android:title="@string/options_units"
            android:key="units" />
        <Preference
            android:title="@string/options_currency"
            android:key="fiat" />
        <SwitchPreferenceCompat
            android:title="@string/email_notifications"
            android:key="email_notifications" />
        <SwitchPreferenceCompat
            android:title="@string/sms_notifications"
            android:key="sms_notifications" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/security"
        android:key="security">
        <SwitchPreferenceCompat
            android:title="@string/enable_fingerprint"
            android:key="fingerprint" />
        <Preference
            android:title="@string/change_pin_code"
            android:key="pin" />
        <SwitchPreferenceCompat
            android:title="@string/two_fa"
            android:key="2fa" />
        <Preference
            android:title="@string/change_password"
            android:key="change_pw" />
        <Preference
            android:title="@string/password_hint"
            android:key="pw_hint1" />
        <SwitchPreferenceCompat
            android:title="@string/tor_requests"
            android:key="tor" />
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:title="@string/shortcut_settings_enable"
            android:key="receive_shortcuts_enabled"
            android:persistent="true"
            android:summary="@string/shortcut_settings_summary"/>
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:title="@string/swipe_receive_hint"
            android:key="swipe_to_receive_enabled"
            android:persistent="true"
            android:summary="@string/swipe_receive_preference_summary"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/app"
        android:key="app">
        <Preference
            android:title="@string/preferences_about_title"
            android:key="about" />
        <Preference
            android:title="@string/options_tos"
            android:key="tos" />
        <Preference
            android:title="@string/options_privacy"
            android:key="privacy" />
        <CheckBoxPreference
            android:title="@string/disable_root_warning"
            android:key="disable_root_warning" />
    </PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>
